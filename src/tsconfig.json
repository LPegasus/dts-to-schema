{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "include": [".", "../_schemas_"]
}
